#!/bin/bash

echo "Building mynoise"

nativefier -n my-noise \
	-u luc --width 900 --height 900 \
	--browserwindow-options '{"sandbox":false}' \
	--background-color 07364233 \
	https://mynoise.net/noiseMachines.php

echo "Building pomodoro-timer"
nativefier -n pomodoro-timer \
	-u luc --width 600 --height 400 \
	--browserwindow-options '{"sandbox":false}' \
	--background-color 07364233 \
	--counter --single-instance \
	https://tomato-timer.com/